<html lang="en">

    <%- include('layouts/head') %>

    <body>
      <% if (loggedIn == true) { %>
        logged in
      <% } %>
      <% if (loggedIn == false) { %>
        logged out
      <% } %>

      <%- body %>

      <% if (loggedIn == true) { %>
        <form action="/logout?_method=DELETE" method="POST">
